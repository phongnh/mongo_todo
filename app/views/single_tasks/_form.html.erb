<%= form_for @task do |f| -%>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class='field'>
    <%= f.label :due %>
    <%= f.date_select :due %>
  </div>

  <div class='field'>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>

  <div class='field'>
    <%= f.label :note %>
    <%= f.text_field :note %>
  </div>

  <div class="action">
    <%= f.submit class: 'btn btn-primary' %>
  </div>

<% end -%>